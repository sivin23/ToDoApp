<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo App</title>
    <!-- Bootstrap Style CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Script CDN -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <!-- Custom Styles -->
    <link rel="stylesheet" type="text/css" href="css/style.css" />
  </head>
  <body class="p-0 m-0 h-100 bg-dark text-light">
    <p class="display-3 fw-1 text-center mt-2 mb-5">
      <span class="text-warning"><b><%= dayOfTheWeek %></b></span>
    </p>
    <h3 class="list-title p-2 w-50 text-center">To-Do List</h3>
    <div class="w-50 mx-auto p-3 border border-danger">
      <div class="form-group">
        <% newListItem.forEach( item =>{ %>

        <label class="form-check-label my-1"
          ><input class="form-check-input me-2" type="checkbox" /><%= item
          %></label
        ><br />
        <%} ) %>
      </div>
      <form action="/" method="post" class="mx-auto">
        <div class="form-group mt-3">
          <input
            class="form-control"
            type="text"
            name="newItem"
            autocomplete="off"
            autofocus
          />
          <button class="btn btn-primary form-control mt-1" type="submit">
            Add Task
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
