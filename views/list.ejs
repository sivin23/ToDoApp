<%- include("header") -%>

<p class="display-3 fw-1 text-center mb-5">
  <span class="text-warning"><b><%= dayOfTheWeek %></b></span>
</p>
<h3 class="list-title p-2 w-50 text-center">To-Do List</h3>

<div class="w-50 mx-auto p-3 border border-danger">
  <div class="form-group list-item-data">
    <% newListItem.forEach( item =>{ %>
    <div class="mt-3">
      <input class="form-check-input m-0" type="checkbox" />
      <p class="form-check-label p-0 m-0 ms-2"><%= item %></p>
      <br />
    </div>
    <%} ) %>
  </div>
  <form action="/" method="post" class="mx-auto p-3">
    <div class="form-group mt-3">
      <input
        class="form-control"
        type="text"
        name="newItem"
        placeholder="New Task"
        autocomplete="off"
        autofocus
      />
      <button class="btn btn-primary form-control mt-3" type="submit">
        âž• Add Task
      </button>
    </div>
  </form>
</div>
<%- include("footer") -%>
